<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
    "-//Puppy Crawl//DTD Check Configuration 1.3//EN"
    "http://www.puppycrawl.com/dtds/configuration_1_3.dtd">

<module name = "Checker">

    <property name="charset" value="UTF-8"/>

    <property name="severity" value="error"/>

    <module name="FileTabCharacter">
        <property name="eachLine" value="true"/>
    </module>

    <module name="RegexpSingleline">
        <property name="format" value="\s+$"/>
        <property name="message" value="Line has trailing spaces."/>
    </module>

    <module name="RegexpMultiline">
        <property name="format" value="package.*\.domain\.*.*\r?\n[^(]*\.data\."/>
        <property name="message" value="Domain layer depends on data layer"/>
    </module>

    <module name="RegexpMultiline">
        <property name="format" value="\r?\n[\t ]*\r?\n[\t ]*\r?\n"/>
        <property name="message" value="Unnecessary consecutive lines"/>
    </module>

    <module name="RegexpMultiline">
        <property name="format" value="\r?\n[\r?\n]*[\t ]*\/?>"/>
        <property name="message" value="Unnecessary carriage return"/>
    </module>

    <module name="RegexpSingleline">
        <property name="format" value="[^0-9]0dp"/>
        <property name="fileExtensions" value="xml" />
        <property name="message" value="0dp should be replaced with 0px"/>
    </module>

    <module name="RegexpSingleline">
        <property name="format" value="[0-9]f[^0-9A-Za-z\n]"/>
        <property name="fileExtensions" value="kt" />
        <property name="message" value="Float literal must be marked by uppercase F"/>
    </module>

    <module name="RegexpSingleline">
        <property name="format" value="kotlinx\.coroutines\.GlobalScope"/>
        <property name="fileExtensions" value="kt" />
        <property name="message" value="Using GlobalScope is prohibited. Use processLifecycleScope instead"/>
    </module>

</module>