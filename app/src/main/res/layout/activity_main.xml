<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/vPermissionContainer"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/offset20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/vPermissionLabel"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/offset20"
                android:layout_weight="1"
                android:text="Разрешение на доступ к уведомлениям"
                android:textColor="@color/black"
                android:textSize="@dimen/text18" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/vPermissionCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="false"
                android:focusable="false" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>